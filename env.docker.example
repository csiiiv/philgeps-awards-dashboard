# ==============================================================================
# PhilGEPS Awards Dashboard - Docker Environment Configuration
# ==============================================================================
# Copy this file to .env and customize the values for your environment
# Usage: cp env.docker.example .env

# ==============================================================================
# Django Configuration
# ==============================================================================

# Django Secret Key (REQUIRED in production)
SECRET_KEY=django-insecure-dev-key-CHANGE-THIS-IN-PRODUCTION

# Debug mode (True for development, False for production)
DEBUG=True

# ==============================================================================
# Network & CORS Configuration
# ==============================================================================

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Comma-separated list of CORS allowed origins (include protocol)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Comma-separated list of CSRF trusted origins (include protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# Celery & Queue System
# ==============================================================================

CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis

# ==============================================================================
# RabbitMQ Configuration
# ==============================================================================

RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ==============================================================================
# Data Configuration
# ==============================================================================

USE_TMPFS_PARQUET=true

# ==============================================================================
# Example Production Configuration
# ==============================================================================
# For production (philgeps.simple-systems.dev), create .env with:
#
# SECRET_KEY=<generate-secure-key>
# DEBUG=False
# ALLOWED_HOSTS=philgeps.simple-systems.dev,philgeps-api.simple-systems.dev
# CORS_ALLOWED_ORIGINS=https://philgeps.simple-systems.dev
# CSRF_TRUSTED_ORIGINS=https://philgeps.simple-systems.dev
# RABBITMQ_USER=admin
# RABBITMQ_PASSWORD=<secure-password>
# ==============================================================================

