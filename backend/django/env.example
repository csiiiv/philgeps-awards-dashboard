# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Production Settings
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,philgeps.simple-systems.dev,philgeps-api.simple-systems.dev

# Comma-separated list of CORS allowed origins (include protocol)
CORS_ALLOWED_ORIGINS=https://philgeps.simple-systems.dev,https://philgeps-2.simple-systems.dev

# Comma-separated list of CSRF trusted origins (include protocol)
CSRF_TRUSTED_ORIGINS=https://philgeps.simple-systems.dev,https://philgeps-2.simple-systems.dev

# SSL/Security
SECURE_SSL_REDIRECT=True

# Celery & Queue System
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=redis://redis:6379/0
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis

# Database (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Data files (Parquet) location
# Set to /data/parquet when using Docker with a volume mount like ./data:/data
# PARQUET_DIR=/data/parquet

